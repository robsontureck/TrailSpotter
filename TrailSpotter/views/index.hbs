{{!-- index.hbs --}}
<p class='counterIndex' style="color: rgb(0, 0, 0)"><strong>You are the user number: </strong>{{accessCount}}</p>
{{#> layout title="Home Page"}}



<div class="intro row">
    <div class="col-md-6">
        <div class="inner-border">
            <h1>
                <strong>Discover</strong> new trails,<br>
                wherever you are going.
            </h1>
        </div>
    </div>
    <div class="col-md-6 text-center">
        <p></p>
        <h1>
            <strong>And all the places and events nearby!</strong>
        </h1>
    </div>
</div>


<!--Jumbotron-->
<div class="jumbotron">
    <div class="container">
        <h1 class="display-2 text-black" style="font-family:'Arial'">Start searching for a city where you want to find
            your next adventure!</h1>
        <hr class="my-4">
        <div class="input-group mb-3">
            <input type="text" id="cityName" class="form-control" placeholder="City, State" aria-label="Search"
                aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button id='fetchButton' class="btn btn-secondary">Search</button>
            </div>
        </div>
    </div>
</div>

<!--Bootstrap-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
<script src="/javascripts/index.js"></script>
{{/layout}}