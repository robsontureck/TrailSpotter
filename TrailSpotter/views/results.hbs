<body>
    <div class="alert alert-light text-center">
        <strong>Not the city were you looking for? </strong><a href="/" class="alert-link">Go back to the home page</a>.
    </div>
    <div>
        <h4 class="text-center">or<br><br>Search another city!</h4>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" id="cityName" class="form-control" placeholder="City, State" aria-label="Search"
                        aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button id='fetchButton' class="btn btn-secondary">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="central-container">
        <div class="list-container">
            <ul class="left-list">

                {{#if errorMessagePlaces}}
                <div class="mb-4">
                    <div class="alert alert-danger" role="alert">
                        {{errorMessagePlaces}}
                    </div>
                </div>
                {{else}}
                <h4 class="mb-4 text-center"><strong>Displaying {{responseData.places.length}} points of interest
                        near.</strong></h4>
                {{/if}}
                {{#each responseData.places}}
                <div class="mb-4">
                    <div class="card results-card mx-auto">
                        {{#if this.photoUrl}}
                        <img src="{{this.photoUrl}}" class="card-img-results" alt="{{this.name}}">
                        {{else}}
                        <img src="/images/trailspotter.jpg" class="card-img-results" alt="Default Image">
                        {{/if}}
                        <div class="card-body">
                            <h5 class="card-title"><strong>{{this.name}}</strong></h5>
                            <p class="card-text"><strong>Address: </strong>{{this.address}}</p>
                            {{#if this.rate}}
                            <p class="card-text">
                                <strong>Rating: </strong>{{this.rate}} <svg xmlns="http://www.w3.org/2000/svg"
                                    width="16" height="16" fill="currentColor" class="bi bi-star-fill"
                                    viewBox="0 0 16 16">
                                    <path
                                        d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                </svg> from <strong>{{this.userRating}} users.</strong>
                            </p>
                            {{/if}}
                            <p class="card-text"><strong>Type: </strong>{{this.type.[0]}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </ul>
        </div>

        <div class="list-container">
            <ul class="right-list">
                {{#if errorMessageEvents}}
                <div class="mb-4">
                    <div class="alert alert-danger" role="alert">
                        {{errorMessageEvents}}
                    </div>
                </div>
                {{else}}
                <h4 class="mb-4 text-center"><strong>Displaying {{responseData.events.length}} events near:</strong>
                </h4>
                {{/if}}
                {{#each responseData.events}}
                <div class="mb-4">
                    <div class="card results-card mx-auto">

                        <img src="{{images.1.url}}" class="card-img-results" alt="{{this.name}} thumbnail">

                        <div class="card-body">
                            <h5 class="card-title"><strong>{{this._embedded.venues.0.name}}</strong></h5>
                            <p class="card-text"><strong>Event: </strong>{{this.name}}</p>
                            <p class="card-text"><strong>Location:</strong> {{this._embedded.venues.0.city.name}}
                            <p>
                            <p class="card-text"><strong>Date: </strong>{{this.dates.start.localDate}}
                            </p>
                            <p class="card-text"><strong>Distance:</strong> {{this.distance}} miles</p>
                            <p class="card-text"><strong>Event Segment: </strong>{{this.classifications.0.segment.name}}
                            </p>
                            <p class="card-text"><strong>Event Genre: </strong>{{this.classifications.0.genre.name}}</p>
                            <div class="button">
                                <a href="{{this.url}}" class="btn btn-dark btn-custom" target="_blank">Go to the event
                                    page!</a>
                            </div>
                        </div>


                    </div>
                </div>
                {{/each}}
            </ul>
        </div>
    </div>


    <script src="/javascripts/index.js"></script>

</body>